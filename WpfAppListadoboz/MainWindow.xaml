<Window x:Class="WpfAppListadoboz.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAppListadoboz"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            
        </Grid.RowDefinitions>
        <ListBox x:Name="lbMuveletek" Grid.Column="1"
                 Margin="10" Background="LightSeaGreen" MouseDoubleClick="lbMuveletek_MouseDoubleClick"/>

        <ListBox x:Name="lbEredmenyek" Grid.Column="1" Grid.Row="1"
                 Margin="10" Background="LightGoldenrodYellow"/>
        
        <ListBox x:Name="lbOutput" Grid.Column="1" Grid.Row="2"
                 Margin="10" Background="LightGray"/>


        <StackPanel>
            <Button x:Name="loadBtn" Height="40px" Width="80px" Click="loadBtn_Click" Margin="10px">Betöltés</Button>
            <Slider x:Name="inputSli" Minimum="10" Maximum="100"></Slider>
            <Button x:Name="rndBtn" Width="60px">Generálás</Button>
        </StackPanel>

        <StackPanel Grid.Row="1" VerticalAlignment="Center">
            <Button x:Name="saveBtn" Width="80px" Click="saveBtn_Click">Mentés</Button>
        </StackPanel>

        <StackPanel Grid.Row="2" VerticalAlignment="Center">
            <Button x:Name="megoldasBtn" Width="80px" Click="megoldasBtn_Click" Margin="10px">4a</Button>
            <Button x:Name="megoldas2Btn" Width="80px" Click="megoldas2Btn_Click" Margin="0 0 0 10px">4b</Button>
            <Button x:Name="megoldas3Btn" Width="80px" Click="megoldas3Btn_Click">4c</Button>
        </StackPanel>
        
    </Grid>
    
</Window>
